{
    "compilerOptions": {
      "target": "esnext",                
      "module": "esnext",
      "lib": ["dom", "dom.iterable", "esnext"],
      "jsx": "react-jsx",                      
      "outDir": "./dist",             
      "rootDir": "./src",               
      "strict": true,
      "noImplicitAny": true,  
      "moduleResolution": "node",         
      "resolveJsonModule": true,         
      "allowSyntheticDefaultImports": true,
      "strictNullChecks": false,             
      "esModuleInterop": true,        
      "sourceMap": true,           
      "declaration": true,             
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist"]   
}